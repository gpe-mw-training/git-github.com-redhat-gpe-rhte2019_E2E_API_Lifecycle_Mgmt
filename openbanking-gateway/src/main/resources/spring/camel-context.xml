            <setHeader id="setHeader-route2" headerName="Exchange.HTTP_RESPONSE_CODE">
                <constant>501</constant>
            </setHeader>
            <setBody id="setBody-route2">
                <simple>API operation not implemented: ${headers.CamelHttpMethod} ${headers.CamelHttpPath}</simple>
            </setBody>
        </route>

        <route id="route200">
        	<from id="from-route200" uri="direct:200"/>
        	<log message="Called Banks API Operation"/>
            <setHeader id="setHeader-route200" headerName="Exchange.HTTP_RESPONSE_CODE">
                <constant>200</constant>
            </setHeader>  
            <to uri="sql:SELECT * FROM usecase.banks;" />
         </route>
    </camelContext>
</beans>
